#:
#$exec xinput --set-prop 12 "libinput Natural Scrolling Enabled" 1
exec kupfer
exec sudo dnsmasq -S 1.1.1.1
exec /home/xk/bin/trackballscroll.sh
exec xbindkeys
exec pasystray
exec --no-startup-id nm-applet
exec --no-startup-id copyq

set $alt Mod1
set $sup Mod4
set $ctl Control
set $exec split toggle; exec --no-startup-id

bindsym $alt+Shift+M mark "scratchterm", move scratchpad
bindsym $alt+m [con_mark="scratchterm"] scratchpad show
bindsym $alt+Shift+F1 mark "scratch1", move scratchpad
bindsym $alt+F1 [con_mark="scratch1"] scratchpad show

# Calculator scratchpad
bindsym $alt+Shift+n [instance="calc"] move scratchpad
bindsym $alt+n [instance="calc"] scratchpad show

for_window [instance="yakuake"] floating enable

# Use Mouse+$ctl to drag floating windows to their wanted position
floating_modifier $ctl

# start a terminal

bindsym $ctl+Return exec i3-sensible-terminal; exec "bash -c 'sleep 0.1s;i3-msg floating enable;i3-msg border normal 2;i3-msg resize set 400px 300px'"
bindsym $alt+p exec keepass

bindsym $sup+v exec gvim --class floatingwin
for_window [class="^floatingwin$"] floating enable
for_window [class="^keepass$"] floating enable

bindsym $ctl+b $exec pcmanfm
bindsym $alt+Next $exec xcalib -red 1.04 1 95 -green 1.04 1 95 -blue 1.08 1 85 -alter
bindsym $alt+Prior $exec xcalib -clear

set $Locker i3lock -c 000000 && sleep 1

set $mode_system System (l) lock, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $sup+l mode "$mode_system"

exec xautolock -time 10 -locker "i3lock -c 000000" &

# kill focused window
bindsym $ctl+q kill
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

focus_follows_mouse yes

bindsym $alt+i focus left
bindsym $alt+semicolon focus right

bindsym $ctl+$alt+Tab move container to workspace next
bindsym $ctl+$alt+Shift+Tab move container to workspace prev
bindsym $alt+Tab workspace next
bindsym $alt+Shift+Tab workspace prev
# modernatively, you can use the cursor keys:
bindsym $alt+Left focus left
bindsym $alt+Down focus down
bindsym $alt+Up focus up
bindsym $alt+Right focus right

# move focused window
#bindsym $ctl+Shift+m move left
#bindsym $ctl+Shift+n move down
#bindsym $ctl+Shift+e move up
#bindsym $ctl+Shift+i move right

# modernatively, you can use the cursor keys:
bindsym $ctl+Shift+Left move left
bindsym $ctl+Shift+Down move down
bindsym $ctl+Shift+Up move up
bindsym $ctl+Shift+Right move right

# enter fullscreen mode for the focused container
bindsym $ctl+grave fullscreen toggle
bindsym $alt+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $ctl+$alt+s layout stacking
bindsym $ctl+$alt+w layout tabbed
bindsym $ctl+$alt+space layout toggle split

# toggle tiling / floating
bindsym $ctl+Shift+space "mark --add _; [con_mark=f] floating disable, border none, mark --add --toggle _; [con_mark=_] floating enable, border normal 2; mark --add --toggle f;"

hide_edge_borders both
new_window none
new_float normal 2
show_marks no
# change focus between tiling / floating windows
#bindsym $ctl+space focus mode_toggle

# focus the parent container
#bindsym $ctl+g focus parent

# focus the child container
#bindsym $ctl+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $ctl+1 workspace $ws1
bindsym $ctl+2 workspace $ws2
bindsym $ctl+3 workspace $ws3
bindsym $ctl+4 workspace $ws4
bindsym $ctl+5 workspace $ws5
bindsym $ctl+6 workspace $ws6
bindsym $ctl+7 workspace $ws7
bindsym $ctl+8 workspace $ws8
bindsym $ctl+9 workspace $ws9

# move focused container to workspace
bindsym $ctl+Shift+1 move container to workspace $ws1
bindsym $ctl+Shift+2 move container to workspace $ws2
bindsym $ctl+Shift+3 move container to workspace $ws3
bindsym $ctl+Shift+4 move container to workspace $ws4
bindsym $ctl+Shift+5 move container to workspace $ws5
bindsym $ctl+Shift+6 move container to workspace $ws6
bindsym $ctl+Shift+7 move container to workspace $ws7
bindsym $ctl+Shift+8 move container to workspace $ws8
bindsym $ctl+Shift+9 move container to workspace $ws9
bindsym $ctl+Shift+0 move container to workspace $ws10

bindsym $ctl+Shift+r restart

# exit i3 (logs you out of your X session)
#bindsym $ctl+Shift+e $exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $ctl+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $alt+r mode "default"
}

bindsym $alt+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command SCRIPT_DIR=/home/xk/bin/i3blocks/scripts i3blocks
}
#font pango:monospace 8

exec --no-startup-id compton --config ~/.config/compton/compton.conf -b
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pactl -- set-sink-volume 1 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl -- set-sink-volume 1 -5% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute 1 toggle # mute sound

# Brightness
bindsym XF86MonBrightnessDown $exec bin/brightness - 500
bindsym XF86MonBrightnessUp $exec bin/brightness + 500

# Set background for root window.
exec --no-startup-id xsetroot -solid "#555555"

# Start redshift in auto mode and fallback to zurich
exec --no-startup-id redshift
